
{
    "version": 2,
    "builds": [
        {
            "src": "api/index.php",
            "use": "@vercel/php",
            "config": {
                "includeFiles": ["vendor/**", "bootstrap/**", "storage/**"]
            }
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "/public/$1" }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "https://aiProject.com",
        "APP_KEY": "base64:YOUR_APP_KEY_HERE",
        "DB_CONNECTION": "mysql",
        "DB_HOST": "YOUR_DB_HOST_HERE",
        "DB_PORT": "3306",
        "DB_DATABASE": "YOUR_DB_NAME_HERE",
        "DB_USERNAME": "YOUR_DB_USERNAME_HERE",
        "DB_PASSWORD": "YOUR_DB_PASSWORD_HERE"
    }
}


